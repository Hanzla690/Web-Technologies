<link rel="stylesheet" href="/stylesheets/auth.css" />

<div class="background">
  <main class="container" id="container">
    <div class="formContainer">
      <form action="/auth/login" method="post">
        <div class="signIn">
          <h1>Sign In</h1>
          <input type="email" name="email" id="" placeholder="Email" required />
          <input
            type="password"
            name="password"
            id=""
            placeholder="Password"
            required
          />
          <a href="#" class="forgotPassword">Forgot your Password?</a>
          <button type="submit" class="signInBtn">Sign In</button>
        </div>
      </form>
      <form action="/auth//signup" method="post">
        <div class="signUp">
          <h1>Create Account</h1>
          <input type="text" name="Name" id="" placeholder="Name" required />
          <input type="email" name="email" id="" placeholder="Email" required />
          <input
            type="password"
            name="password"
            id=""
            placeholder="Password"
            required
          />
          <button class="signInBtn">Sign Up</button>
        </div>
      </form>
    </div>
    <div class="toggleContainer">
      <div class="right">
        <h1>Hello, Friend</h1>
        <p>Register with your personal details to use all the features</p>
        <button class="signUpBtn" id="signUpBtn">Sign Up</button>
      </div>
      <div class="left">
        <h1>Welcome Back</h1>
        <p>Enter your personal details to use all the features</p>
        <button class="signUpBtn" id="signInBtn">Sign In</button>
      </div>
    </div>
  </main>
</div>
