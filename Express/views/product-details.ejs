<link rel="stylesheet" href="/stylesheets/product-details.css" />

<main class="product-container">
  <img src="<%= product.image.url %>" alt="" />
  <div class="right">
    <h1><%= product.title %></h1>
    <span class="product-price">$<%= product.price %></span>
    <p><%= product.description %></p>
    <div class="product-rating">
      <i class="bx bx-star"></i>
      <i class="bx bx-star"></i>
      <i class="bx bx-star"></i>
      <i class="bx bx-star"></i>
      <i class="bx bx-star"></i>
    </div>
    <div class="product-quantity-container">
      <input type="text" inputmode="numeric" value="1" id="product-quantity" />
      <div class="quantity-buttons">
        <i id="quantity-up" class="bx bx-chevron-up"></i>
        <i id="quantity-down" class="bx bx-chevron-down"></i>
      </div>
      <a href="/products/<%= product._id %>/add-to-cart">
        <div class="add-to-cart">
          <span>Add to cart</span>
          <i class="bx bx-cart cart-icon"></i>
        </div>
      </a>
    </div>
    <div class="add-to-wishlist">
      <i class="bx bx-heart"></i>
      <span>Add to wishlist</span>
    </div>
    <div class="mini-details">
      <div class="category">
        <span class="tag-title">Category:</span>
        <span class="tag"><%= product.category %></span>
      </div>
      <div class="tags">
        <span class="tag-title">Tags:</span>
        <% for (let tag of product.tags){ %>
        <span class="tag"><%= tag %></span>
        <% } %>
      </div>
    </div>
  </div>
</main>
<section class="info-container" id="info-container">
  <div class="info-selector">
    <span id="specifications-btn" class="info button-active"
