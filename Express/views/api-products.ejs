<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Zone</title>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="/stylesheets/wishlist.css" />
    <link rel="stylesheet" href="/stylesheets/contact.css" />
    <link rel="stylesheet" href="/stylesheets/api-products.css" />
  </head>
  <body>
    <div class="gray-background"></div>
    <%- include('./components/header') %> <%- include('./components/navbar') %>
    <div class="title-row">
      <div class="heading">All Products</div>
      <div class="add-btn">Add New Product</div>
    </div>
    <!-- Products will be displayed here -->
    <div class="items"></div>
    <div class="add-product">
      <form class="contact-form" action="">
        <span>Add Product</span>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" />
        <label for="price">Price</label>
        <input type="number" name="price" id="price" />
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="20"
          rows="5"
        ></textarea>
        <label for="category">Category</label>
        <select name="category" id="category">
          <option value="Audio">Audio</option>
          <option value="Cameras">Cameras</option>
          <option value="Gaming">Gaming</option>
          <option value="Kitchen">Kitchen</option>
          <option value="Screens">Screens</option>
          <option value="Watches">Watches</option>
        </select>
        <label for="tags">Tags (Separated by Space)</label>
        <input type="text" name="tags" id="tags" />
        <label for="specifications">Specifications (Separated by Space)</label>
        <input
          type="text"
          name="specifications"
          id="specifications"
          placeholder="i.e Brand,Apple Weight,50"
        />
        <label for="image">Image</label>
        <input type="file" name="image" id="image" accept="image/*" />
        <button type="submit" id="submit">Add Product</button>
      </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="/javascript/api-products.js"></script>
  </body>
</html>
