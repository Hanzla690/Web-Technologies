<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech Zone</title>
    <link
      href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
    <link rel="stylesheet" href="/stylesheets/products.css" />
  </head>
  <body>
    <%- include('./components/header') %> <%- include('./components/navbar') %>
    <div class="category-icons">
      <div class="item">
        <i class="bx bx-grid-alt"></i>
        <div>Show All</div>
      </div>
      <div class="item">
        <i class="bx bx-headphone"></i>
        <div>Audio</div>
      </div>
      <div class="item">
        <i class="bx bx-camera"></i>
        <div>Cameras</div>
      </div>
      <div class="item">
        <i class="bx bx-joystick"></i>
        <div>Gaming</div>
      </div>
      <div class="item">
        <i class="bx bx-fridge"></i>
        <div>Kitchen</div>
      </div>
      <div class="item">
        <i class="bx bx-desktop"></i>
        <div>Screens</div>
      </div>
      <div class="item">
        <i class="bx bxs-watch-alt"></i>
        <div>Watches</div>
      </div>
    </div>
    <div class="result-sort-row">
      <div class="results">Showing 1-20 of 25 results</div>
      <div class="sort">Sort</div>
    </div>
    <div class="cards">
      <% for (let product of products){ %>
      <div class="card">
        <a href="products/<%=product._id %>">
          <i class="bx bx-heart"></i>
          <img src="<%= product.image %>" alt="" />
          <div class="product-title"><%=product.title %></div>
          <div class="product-price">$<%=product.price %></div>
        </a>
        <div class="add-to-cart-strip">
          <a href="#">
            <div class="div">Add to Cart</div>
            <i class="bx bx-cart cart-icon"></i>
          </a>
        </div>
      </div>
      <% } %>
    </div>
    <%- include('./components/footer') %>
  </body>
</html>
